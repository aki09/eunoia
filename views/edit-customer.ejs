    <section class="ad-post bg-gray py-5">
        <div class="container">
            <form action='/edit-customer.html' method="POST">
                <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Edit Your Customer</h3>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Name:</h6>
                            <input type="text" class="border w-100 p-2 bg-white text-capitalize" name="name" id="name"
                                placeholder="" value="<%= customer[0]['Name'] %>" readonly>

                            <h6 class="font-weight-bold pt-4 pb-1">Contact Number:</h6>
                            <input type="tel" class="border w-100 p-2 bg-white text-capitalize" name="num" id="num"
                                placeholder="" value="<%= customer[0]['Contact'] %>">
                            <h6 class="font-weight-bold pt-4 pb-1">Address:</h6>
                            <textarea name="add" id="add" class="border p-3 w-100" rows="7"
                                placeholder=""><%= customer[0]['Address'] %></textarea>

                            <h6 class="font-weight-bold pt-4 pb-1">State:</h6>
                            <input type="text" class="border w-100 p-2 bg-white text-capitalize" name="state" id="state"
                                placeholder="" value="<%= customer[0]['State'] %>">
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Instagram Handle:</h6>
                            <input type="text" class="border w-100 p-2 bg-white" id="ig" name="ig"
                                placeholder="" value="<%= customer[0]['Instagram_Handle'] %>">
                            <h6 class="font-weight-bold pt-4 pb-1">Email ID:</h6>
                            <input type="email" name="email" class="border w-100 p-2 bg-white"
                            placeholder="" id="email" value="<%= customer[0]['Email_ID'] %>">
                        </div>
                    </div>
                </fieldset>
                <input type="hidden" value="<%= customer[0]['Customer_ID'] %>" name="id" id="id">
                <button type="submit" class="btn btn-primary d-block mt-2">CONFIRM CHANGES</button>
            </form>
        </div>
    </section>

<%- include("includes/footer") -%>