    <section class="ad-post bg-gray py-5">
        <div class="container">
            <form action='/ad-customer.html' method="POST">
                <fieldset class="border border-gary p-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Add a Customer</h3>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Name:</h6>
                            <input type="text" class="border w-100 p-2 bg-white text-capitalize" name="name" id="name"
                                placeholder="">

                            <h6 class="font-weight-bold pt-4 pb-1">Contact Number:</h6>
                            <input type="tel" class="border w-100 p-2 bg-white text-capitalize" name="num" id="num"
                                placeholder="">
                            <h6 class="font-weight-bold pt-4 pb-1">Address:</h6>
                            <textarea name="add" id="add" class="border p-3 w-100" rows="7" placeholder=""></textarea>

                            <h6 class="font-weight-bold pt-4 pb-1">State:</h6>
                            <input type="text" class="border w-100 p-2 bg-white text-capitalize" name="state" id="state"
                                placeholder="">
                        </div>
                        <div class="col-lg-6">
                            <h6 class="font-weight-bold pt-4 pb-1">Instagram Handle:</h6>
                            <input type="text" class="border w-100 p-2 bg-white text-capitalize" id="ig" name="ig"
                                placeholder="">
                            <div class="price">
                                <h6 class="font-weight-bold pt-4 pb-1">Email ID:</h6>
                                <div class="row px-3">
                                    <div class="col-lg-4 mr-lg-4 rounded bg-white my-2 ">
                                        <input type="email" name="email" class="border-0 py-2 w-100 price"
                                            placeholder="" id="email">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-primary d-block mt-2">ADD</button>
            </form>
        </div>
    </section>

