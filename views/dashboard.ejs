    <section class="dashboard section">
        <!-- Container Start -->
        <div class="container">
            <!-- Row Start -->
            <% for (var i=0; i<orders.length; i++) { %>
            <div class="row">
                
                <div class="col-md-10 offset-md-60 col-lg-40 offset-lg-60">
                    <!-- Recently Favorited -->
                    <div class="widget dashboard-container my-adslist">
                        <!-- <h2 class="widget-header">ORDER - 1</h2> -->
                            <table class="table table-responsive product-dashboard-table">
                                
                                <tr>
                                    <th rowspan="">Order <%= i + 1%>
                                    </th>
                                    <th>
                                    <td class="action" data-title="Action">
                                        <div class="">
                                            <ul class="list-inline justify-content-center">
                                                <button type="submit" class="button1"><i
                                                        class="fa fa-pencil"></i></button>
                                            </ul>
                                        </div>
                                    </td>
                                    </th>
                                </tr>
                                <td class="product-details">
                                    <span class=""><strong>Order ID:</strong>
                                        <%= orders[i]['Order_ID']%>
                                    </span>
                                    <span><strong>Date: </strong><time>
                                            <%= orders[i]['Order_Date']%>
                                        </time></span>
                                    <span class=""><strong>Amount:</strong>
                                        <%= orders[i]['Amount']%>
                                    </span>
                                    <span class=""><strong>Name: </strong>
                                        <%= customers[i]['Name']%>
                                    </span>
                                    <span class="location"><strong>Address: </strong>
                                        <%= orders[i]['Delivery_Address']%>
                                    </span>
                                    <span class="status active"><strong>Status: </strong>
                                        <%= orders[i]['Order_Status']%>
                                    </span>
                                    <span class=""><strong>PayMode: </strong>
                                        <%= payment[i]['Payment_Mode']%>
                                    </span>
                                    <span class=""><strong>PayDate: </strong><time>
                                            <%= payment[i]['Payment_Date']%>
                                        </time></span>

                                </td>
                                <tbody>
                                    <% for (var i=0; i<1; i++) { %>
                                        <tr>
                                            
                                            <td class="product-details">
                                                <h3 class="title">
                                                    <%= order_item[i]['Type']%>
                                                </h3>
                                                <span class="add-id"><strong>Item ID:</strong>
                                                    <%= order_item[i]['Item_ID']%>
                                                </span>
                                                
                                                <span class="add-id"><strong>Item Price:</strong>
                                                    <%= order_item[i]['Price']%>
                                                </span>
                                            </td>
                                            <td class="action" data-title="Action">
                                                <div class="">
                                                    <ul class="list-inline justify-content-center">
                                                        <button type="submit" class="button1"><i
                                                                class="fa fa-trash"></i></button>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>
                            
                    </div>
                </div>
               
            </div>
            <%}%>
            <!-- pagination -->
            <div class="pagination justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item active"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- pagination -->

        </div>
