                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="product-grid-list">
                    <div class="row mt-30">
                        <% for (var i=0; i<inventory.length; i++) { %>
                            <!-- <li>
                            <%= inventory[i]['Price'] %>
                            </li> -->
                            <div class="col-sm-12 col-lg-4 col-md-6">
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="thumb-content">
                                            <a href="Edit-orders.html">
                                                <img class="card-img-top img-fluid"
                                                    src="<%= inventory[i]['IG_Link']%>" alt="Card image cap">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="Edit-orders.html">
                                                    <%= inventory[i]['Type']%>
                                                </a>
                                            </h4>
                                            <ul class="list-inline product-meta">
                                                <li class="list-inline-item">
                                                    <a href="Edit-orders.html"><i class="fa fa-tags"></i>
                                                        <%= inventory[i]['Status']%>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <a href="#"><i class="fa fa-rupee"></i>
                                                        <%= inventory[i]['Price']%>
                                                    </a>
                                                </li>
                                            </ul>
                                            <p class="card-text">
                                                <%= inventory[i]['Item_condition']%>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <%}%>
                    </div>
                </div>
